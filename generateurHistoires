	<script>
	var boutton = document.getElementById("boutton");
	var generateur = function() {	
		var prenom = document.getElementById("prenom").value;
		var mechant = document.getElementById("mechant").value;
		var ami = document.getElementById("ami").value;
		var lieuNM = document.getElementById("lieuNM").value;
		var veicule = document.getElementById("veicule").value;
		var immatriculation = document.getElementById("immatriculation").value;
		var meteo = document.getElementById("meteo").value;
		var lieu = document.getElementById("lieu").value;
		var type = document.getElementById("type").value;
		var fin = document.getElementById("fin").value;
		var rue = document.getElementById("rue").value;
		var typeVl;
		var meteoVl;
		var lieuVl;
		var finvl;
			
			
			if (lieu === "ville") {
				lieuVl = "ville";
				lieuaction = "visite de gratte-ciel";
				lieumaison = "son appartement";
				lieuactiondepart = "au rez de chaussée du gratte-ciel";
				lieudecor1 = "d'un angle de la rue";
				lieudecor2 = "une voiture";
			} else if (lieu === "montagne") {
				lieuVl = "montagne";
				lieuaction = "randonée";
				lieumaison = "son chalet";
				lieuactiondepart = "au téléphérique";
				lieudecor1 = "d'une cabine de téléphérique";
				lieudecor2 = "un rocher";
			} else if (lieu === "océan") {
				lieuVl = "océan";
				lieuaction = "ballade en mer";
				lieumaison = "sa maison sur pilotis";
				lieuactiondepart = "au yacht";
				lieudecor1 = "d'une dune";
				lieudecor2 = "un palmier";
			} else if (lieu === "planete") {
				lieuVl = "planete";
				lieuaction = "rencontre d'extraterrestres";
				lieumaison = "son abri";
				lieuactiondepart = "au vaisseau qui fait le trajet vers le repaire des extraterrestres";
				lieudecor1 = "d'un cratère";
				lieudecor2 = "la fussée";
			} else {
				lieuVl = "prairie";
				lieuaction = "ballade dans les bois";
				lieumaison = "sa maison";
				lieuactiondepart = "a l'aurée du bois";
				lieudecor1 = "d'un bosquet";
				lieudecor2 = "un arbre";
			}

			if (meteo === "soleil") {
				meteoVl = "faisait beau";
				meteoPH = "sous ce temps radieux"
			} else {
				meteoVl = "pleuvait";
				meteoPH = "malgré le temps pluvieux"
			}

			if (fin === "heureuse" && type === "aventure") {
				finVlAv = "trois jours plus tard , le commisairiat affirma avoir retrouvé " + ami + " bailloné et ligoté dans la rue des " + rue + ". Personne ne savait où se trouvait " + mechant + " mais les policiers avaient de bonnes pistes. " + prenom + " et " + ami + " se marchèrent jusqu'" + lieuactiondepart + " et profitèrent d'une " + lieuaction + " bien méritée."	;
			} else {
				finVl = "malheureuse";
			}

			if (type === "aventure") {
				typeVl = "C'était le matin à " + lieuNM + ". " + prenom + " révait d'une journée comme les autres mais son réve ne prenait pas en compte " + mechant + ", son pire ennemi . " + prenom + " fut réveillé par " + ami + ", a qui il avait promis d'aller faire une " + lieuaction + ". " + prenom + " se leva difficilement et regarda par la fenétre de " + lieumaison + ", il " + meteoVl + ". Ils marchèrent jusqu'" + lieuactiondepart + " quand soudain, " + mechant + " armé d'un gun surgit " + lieudecor1 + ". " + prenom + " et " + ami + " coururent vers " + lieudecor2 + " où ils s'y cachèrent. " + mechant + " les chercha et failli repartir quand " + ami + " éternua. " + mechant + " se retourna, attrapa " + ami + " le mis dans le coffrede sa " + veicule + " garée en contrebas et démara a toute allure. " + prenom + " couru aprés la " + veicule + " de " + mechant + " mais il n'aperçut que la plaque d'immatriculation : " + immatriculation + ". Il se rendit au commisairiat de " + lieuNM + " " + meteoPH + " et y deposa sa plainte au sujet de l'enlevement de " + ami + ". " + prenom + " laissa la police s'en charger et alla se reposer dans " + lieumaison + ". " + finVlAv ; 
			} else if (type === "policier") {
				typeVl = "policier";
			} else {
				typeVl = "fantastique";
			}
			


			var final = typeVl;
			document.getElementById("texte").innerHTML = final;
			document.getElementById("texte").style.border = "solid black 1px";
			console.log(final);
			console.log(lieu);
	};
	/*var remise = function(){
		document.getElementById("texte").textContent = "";
		document.getElementById("texte").style.border = "solid black 0px";
	}*/
	var remplir = function() {
		prenom.value = "Matthieu"
		mechant.value = "Voldemort"
		ami.value = "Dobby"
		lieuNM.value = "Lyon"
		veicule.value = "corvette"
		immatriculation.value = "BE-519-IS"
		rue.value = "embrumes"
	};
	boutton.addEventListener("click", generateur);
	remplirboutton.addEventListener("click", remplir);
	//zero.addEventListener("click", remise);
	console.log(remplir);
	</script>
